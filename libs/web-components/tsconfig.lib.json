{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": ".",
    "declaration": true,
    "rootDir": "./src",
    "types": [
      "node"
    ],
    "declarationDir": "./types"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*_spec.ts",
    "public/*",
    "playground/*",
    "**/*.stories.ts",
    "**/*.stories.js"
  ]
}
