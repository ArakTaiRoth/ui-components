{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "{$NAME}",
    "labels": {
      "template": "{${NAME}-build-pipeline-template",
      "app": "${NAME}"
    }
  },
  "objects": [
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-build-pipeline",
        "app": "${NAME}"
      },
      "spec": {
        "runPolicy": "Serial",
        "resources": {
          "limits": {
            "cpu": "500m",
            "memory": "1Gi"
          },
          "requests": {
            "cpu": "50m",
            "memory": "16Mi"
          }
        },
        "source": {
          "git": {
            "uri": "${SOURCE_REPOSITORY_URI}",
            "ref": "${SOURCE_REPOSITORY_REF}"
          },
          "sourceSecret": {
            "name": "${SOURCE_SECRET_NAME}"
          }
        },
        "strategy": {
          "type": "JenkinsPipeline",
          "jenkinsPipelineStrategy": {
            "jenkinsFilePath": "Jenkinsfile"
          }
        },
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ]
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the frontend objects defined in this template.",
      "required": true
    },
    {
      "name": "SOURCE_REPOSITORY_URI",
      "displayName": "Git Repository URI",
      "description": "The URL of the repository with your application source code.",
      "required": true
    },
    {
      "name": "SOURCE_REPOSITORY_REF",
      "displayName": "Git Reference",
      "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default branch.",
      "required": true
    },
    {
      "name": "SOURCE_SECRET_NAME",
      "displayName": "Git Secret",
      "description": "Set this to the name of the source secret in OpenShift you created to pull code from the Git Repository.",
      "required": false,
      "value": "enter source secret here"
    }
  ]
}
